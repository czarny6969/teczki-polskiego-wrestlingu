{   
    "build": {
        "dockerfile": "Dockerfile.zola"
    },
    "name": "Zola",
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "Zola Server",
            "onAutoForward": "openBrowserOnce"
        },
        "1024": {
            "label": "Zola Live Reload",
            "onAutoForward": "silent"
        }
    },
    "postStartCommand": "/usr/local/bin/zola serve -i 0.0.0.0 -p 8000"
}